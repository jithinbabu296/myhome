<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<data>
  <record id="sale_order_form_payment" model="ir.ui.view">
        <field name="name">sale.order.form.payment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
  <xpath expr="//button[@name='action_confirm']" position='before'>
    <button name="%(sale.action_view_sale_advance_payment_inv)d" string="Advance Payment"
                        type="action" context="{'default_advance_payment_method': 'percentage'}"
                        attrs="{'invisible': ['|',('invoice_status', '!=', 'no'), ('state', '!=', 'draft')]}"/>
  </xpath>
        </field>
  </record>
</data>
</odoo>
